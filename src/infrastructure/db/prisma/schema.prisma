// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "mysql"
  url      = env("DATABASE_URL")
}


model User {
  id        Int      @id @default(autoincrement())
  email     String   @unique
  name      String
  password  String
  authCode  AuthorizationCode[]
}

model GrantType {
    id        Int     @id @default(autoincrement())
    name      String  @unique
    client    GrantTypeOnClient[]
}

model Client {
    id        Int     @id @default(autoincrement())
    clientId  String  @unique
    clientSecret  String
    redirectUri  RedirectUri[]
    grantType    GrantTypeOnClient[]
    authorizationCode  AuthorizationCode[]
}

model GrantTypeOnClient {
    client    Client  @relation(fields: [clientId], references: [clientId])
    clientId  String
    grantType  GrantType  @relation(fields: [grantTypeId], references: [id])
    grantTypeId  Int

    @@id([clientId, grantTypeId])
}

model RedirectUri {
    id        Int     @id @default(autoincrement())
    uri       String
    client    Client  @relation(fields: [clientId], references: [clientId])
    clientId  String
    authorizationCode  AuthorizationCode[]
}

model AuthorizationCode {
    id        Int     @id @default(autoincrement())
    code      String  @unique
    expiresAt DateTime
    codeChallenge  String?
    codeChallengeMethod  String?
    client    Client  @relation(fields: [clientId], references: [clientId])
    clientId  String
    user      User    @relation(fields: [userId], references: [id])
    userId    Int
    redirectUri  RedirectUri  @relation(fields: [redirectUriId], references: [id])
    redirectUriId  Int
}